<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- App bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Nav bar -->
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Base background/text colors -->
        <item name="android:windowBackground">@color/darker_grey</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_grey</item>
    </style>

    <!-- Splash screen -->
    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBehavior" tools:targetApi="33">icon_preferred</item>
        <item name="windowSplashScreenBackground">@color/darker_grey</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

</resources>
