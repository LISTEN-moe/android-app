<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/dark_grey"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/listenmoe"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/light_grey" />

        <LinearLayout
            android:id="@+id/about_listenmoe_website"
            style="@style/AboutItem">

            <ImageView
                android:layout_width="@dimen/md_listitem_height"
                android:layout_height="@dimen/md_listitem_height"
                android:src="@drawable/ic_radio_white_24dp"
                android:tint="@color/light_grey"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/open_in_browser"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_listenmoe_play_history"
            style="@style/AboutItem">

            <ImageView
                android:layout_width="@dimen/md_listitem_height"
                android:layout_height="@dimen/md_listitem_height"
                android:src="@drawable/ic_history_white_24dp"
                android:tint="@color/light_grey"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/play_history"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_listenmoe_discord"
            style="@style/AboutItem">

            <ImageView
                android:layout_width="@dimen/md_listitem_height"
                android:layout_height="@dimen/md_listitem_height"
                android:src="@drawable/ic_person_white_24dp"
                android:tint="@color/light_grey"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/discord"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_listenmoe_patreon"
            style="@style/AboutItem">

            <ImageView
                android:layout_width="@dimen/md_listitem_height"
                android:layout_height="@dimen/md_listitem_height"
                android:src="@drawable/ic_card_giftcard_white_24dp"
                android:tint="@color/light_grey"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/patreon"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
